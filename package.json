{
	"name": "elenaorfe-website",
	"version": "1.0.0",
	"repository": "git@github.com:elenaorfe/elenaorfe-website.git",
	"author": "elenaortega <elenaorfe@gmail.com>",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"client:build": "yarn workspace @elenaorfe/client build",
		"client:dev": "yarn workspace @elenaorfe/client dev",
		"client:start": "yarn workspace @elenaorfe/client start",
		"client:test": "yarn workspace @elenaorfe/client test",
		"backend-contact:deploy": "yarn workspace @elenaorfe/worker-contact deploy",
		"backend-contact:dev": "yarn workspace @elenaorfe/worker-contact dev --port 8787",
		"backend-openai:deploy": "yarn workspace @elenaorfe/worker-openai deploy",
		"backend-openai:dev": "yarn workspace @elenaorfe/worker-openai dev --port 8989",
		"format": "prettier --check .",
		"format:fix": "prettier --write --list-different .",
		"lint": "eslint --fix . --ext .js,.jsx,.ts,.tsx",
		"prepare": "husky install"
	},
	"devDependencies": {
		"eslint": "^8.28.0",
		"eslint-config-next": "^14.1.4",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard-with-typescript": "^23.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.5.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.31.11",
		"husky": "^8.0.0",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.5.12"
	},
	"resolutions": {
		"string-width": "4.2.3"
	}
}
